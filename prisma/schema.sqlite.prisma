datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Telegram

model User {
  id                Int      @id @default(autoincrement())
  telegramId        BigInt   @unique
  telegramUsername  String?
  telegramFirstName String?
  createdAt         DateTime @default(now())
}

