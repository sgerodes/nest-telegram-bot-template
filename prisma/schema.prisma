generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Telegram

model User {
  id                Int      @id @default(autoincrement())
  telegramId        BigInt   @unique
  telegramUsername  String?
  telegramFirstName String?
  createdAt         DateTime @default(now())
}

